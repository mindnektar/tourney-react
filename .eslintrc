{
  "extends": "airbnb",
  "rules": {
    "indent": [2, 4, {"SwitchCase": 1}],
    "max-len": [0],
    "no-constant-condition": [0],
    "no-param-reassign": [0],
    "react/jsx-indent-props": [2, 4],
    "react/jsx-no-bind": [0],
    "react/prefer-stateless-function": [0]
  },
  "globals": {
    "DEBUG": true
  }
}
